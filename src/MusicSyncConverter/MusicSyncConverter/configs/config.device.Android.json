{
    "DeviceConfig": {
        "PathCharacterLimitations": {
            "NormalizationMode": "NonBmp" // Android does not want to read/write non UCS-2 characters on sd cards
        },
        "TagCharacterLimitations": null,
        "SupportedFormats": [
            {
                "Extension": ".mp3",
                "Codec": "mp3"
            },
            {
                "Extension": ".m4a",
                "Codec": "aac",
                "Profile": "LC",
                "MaxSampleRateHz": 48000
            },
            {
                "Extension": ".m4a",
                "Codec": "aac",
                "Profile": "HE-AAC"
            },
            {
                "Extension": ".m4a",
                "Codec": "aac",
                "Profile": "HE-AACv2"
            },
            {
                "Extension": ".ogg",
                "Codec": "vorbis"
            },
            {
                "Extension": ".ogg",
                "Codec": "opus"
            },
            {
                "Extension": ".flac",
                "Codec": "flac",
                "MaxChannels": 2
            },
            {
                "Extension": ".wav",
                "MaxSampleRateHz": 44100,
                "MaxChannels": 2
            }
        ],
        "FallbackFormat": {
            "Extension": ".m4a", // this weird combination of m4a and vorbis is here, because FFMPEG can't add album covers to ogg containers and tags are broken with matroska for some reason
            "Codec": "libvorbis", // we could use opus here, but for some reason that makes album covers break
            "Muxer": "mp4",
            "Bitrate": 128,
            "Channels": 2
        },
        "AlbumArt": {
            "Codec": "mjpeg",
            "Width": 512,
            "Height": 512
        },
        "ResolvePlaylists": false,
        "TagValueDelimiter": ";"
    }
}